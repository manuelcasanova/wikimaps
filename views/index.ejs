  <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üìç</text></svg>">

  <!-- Topnavbar -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <title>Wiki Maps</title>



</head>

<%- include('partials/_header') %>

  <header>

    <div class="mainTitle"> <h1>Welcome to Wiki Maps üó∫Ô∏è</h1></div>
    <div class="mainSubtitle"> <h3>View and create maps with points of interest</h3></div>
    <div class="pic-index"></div><img class="mainpageimage" src="https://cdn.pixabay.com/photo/2017/08/17/07/47/travel-2650303_960_720.jpg" alt="image"></div>


  </header>

  <table class="table">

    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Action</th>
      </tr>
    </thead>

    <tbody>
      <% for (const map of maps) {%>
      <tr>
        <td><%=map.id%></td>
        <td><a href="/maps/<%= map.id%>"> <%=map.title%></a></td>
        <td><%=map.description%></td>

<!-- we are putting a tablecell outisde the if statement to keep all the cells visible -->
        <td>
          <%if (map.user_id == userid) { %>
          <form method="POST" action="/maps/new/<%= map.id %>/delete">
          <button type="submit" style="background-color:white; border-color:crimson; color:crimson" class="btn btn-primary">Delete</button>
        </form>
        <% } %>
      </td>

      </tr>
      <%}%>
    </tbody>

  </table>




  <!-- Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
