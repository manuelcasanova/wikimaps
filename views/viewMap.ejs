<!-- https://leafletjs.com/examples/quick-start/ add other things to your map, including markers, polylines, polygons, circles,-->
<body>
  <%- include('partials/_header') %>

  <main style="margin: 1em;">

    <div class="onemaptitle">
      <% for (const map of mapPoints) {%>
        <h2 id="map_title"><%= map.map_title %></h2>
      <%}%>
      </div>



    <div id="map"></div>
    <script>var map = L.map('map').setView([51.505, -0.09], 6);
    L.tileLayer('https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token={accessToken}', {
    attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors, Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
    maxZoom: 18,
    id: 'mapbox/streets-v11',
    tileSize: 512,
    zoomOffset: -1,
    accessToken: 'pk.eyJ1IjoiZGFrYXJhYSIsImEiOiJjbDJnazRxdHIwNG01M2xrMWdlZXcxenV2In0.oMDEKtURRjgTZ_vqRuPWOQ'
}).addTo(map);
</script>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">User</th>
    </tr>
  </thead>
  <tbody>
    <% for (const point of mapPoints) {%>
    <tr>
      <td><%=point.point_title%></td>
      <td><%=point.point_description%></td>
      <td><%=point.user_name%></td>
      <td><form method="GET" action="/maps/<%= point.map_id %>/points">
        <button type="submit" style="background-color:white; border-color:crimson; color:crimson" class="btn btn-primary">Edit</button>
      </form></td>
    </tr>
    <%}%>

  </main>


    </tbody>

  </table>

